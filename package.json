{
  "name": "sales-intelligence",
  "version": "1.1.3",
  "description": "Live Sales Coaching Overlay â€” dual-channel STT mit KI-Tipps",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "setup": "bash setup.sh",
    "start": "bash start.sh",
    "stop": "bash stop.sh",
    "dev": "electron .",
    "build": "electron-builder --mac dir"
  },
  "dependencies": {
    "form-data": "^4.0.5",
